<launch>
  <arg name="root" value="$(find ubiquity_launches)" />
  <arg name="base" value="$(env ROBOT_BASE)" />
  <arg name="node" value="bus_server" />
  <node name="arduino" pkg="$(arg node)" type="$(arg node).py" output="screen">
    <rosparam command="load"
     file="$(arg root)/n_$(arg node)/params/$(arg base).yaml" />
  </node>
</launch>
