<launch>
  <!-- Required arguments: -->
  <arg name="robot_base" />

  <!-- Convenience arguments: -->
  <arg name="root" value="$(find ubiquity_launches)" />
  <arg name="node" value="bus_server" />

  <!-- Run bus server node: -->
  <node pkg="$(arg node)" type="$(arg node).py"
   name="arduino" output="screen">
    <rosparam command="load"
     file="$(arg root)/n_$(arg node)/params/$(arg robot_base).yaml" />
  </node>
</launch>
