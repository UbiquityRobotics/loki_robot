<launch>
  <!-- Required arguments: -->
  <arg name="robot_base" />

  <!-- Convenience arguments: -->
  <arg name="root" value="$(find ubiquity_launches)" />
  <arg name="rsp"  value="robot_state_publisher" />

  <!-- Launche the robot state publisher:  -->
  <param name="robot_description"
   textfile="$(arg root)/n_$(arg rsp)/urdf/$(arg robot_base).urdf" />
  <node name="$(arg rsp)" pkg="$(arg rsp)" type="state_publisher" />
</launch>
