<launch>
  <!-- Required arguments: -->
  <arg name="robot_base" />

  <!-- Convenience arguments: -->
  <arg name="root" value="$(find ubiquity_launches)" />
  <arg name="rab"  value="ros_arduino_bridge" />

  <!-- Launch ROS arduino bridge: -->
  <node pkg="ros_arduino_python" type="arduino_node.py"
   name="arduino"  output="screen">
    <rosparam command="load"
    file="$(arg root)/n_$(arg rab)/params/$(arg robot_base).yaml" />
  </node>
</launch>
